<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>WebChat</title>
</head>
<body>
  <header>
    <h3>WebChat</h3>
  </header>
  <section>
    <ul id="online-list"></ul>
    <input
      type="text"
      id="inputName"
      placeholder="Insira seu nickname"
      data-testid="nickname-box"
    />
    <button type="submit" id="btn" data-testid="nickname-button">Salvar</button>
  </section>
  <section>
    <ul id="messages"></ul>
      <form action="">
        <input
          type="text"
          id="messageInput"
          autocomplete="off"
          placeholder="Digite uma nova mensagem aqui"
          data-testid="message-box"
        />
        <button type="submit" data-testid="send-button">Enviar</button>
      </form>
  </section>
  <script src="/socket.io/socket.io.js"></script>
  <script src='./js/chat.js'></script>
</body>
</html>